
<%= render "shared/menu" %>

<h1>Simulations</h1>

<table>
  <tr>
    <th>Sample size increment</th>
    <th>Population size</th>
    <th>Voting method</th>
    <th>Mode</th>
    <th>Alternatives Set</th>
    <th class="link"></th>
    <th class="link"></th>
  </tr>

  <tbody>
<% @simulations.each do |simulation| %>
  <tr>
    <td><%=h simulation.sample_size_increment %></td>
    <td><%=h simulation.population_size %></td>
    <td><%=h simulation.voting_method %></td>
    <td><%=h simulation.mode %></td>
    <td><%=h simulation.alternatives_set_name %></td>
    <td class="link"><%= link_to 'Run', run_simulation_path(simulation) %></td>
    <td class="link"><%= link_to 'Delete', simulation, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
  </tbody>
</table>

<br />

<%= link_to 'Create New simulation', new_simulation_path %>

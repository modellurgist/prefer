<h1>Listing simulations</h1>

<table>
  <tr>
    <th>Sample size increment</th>
    <th>Population size</th>
    <th>Voting method</th>
    <th>Mode</th>
  </tr>

<% @simulations.each do |simulation| %>
  <tr>
    <td><%=h simulation.sample_size_increment %></td>
    <td><%=h simulation.population_size %></td>
    <td><%=h simulation.voting_method %></td>
    <td><%=h simulation.mode %></td>
    <td><%= link_to 'Show', simulation %></td>
    <td><%= link_to 'Edit', edit_simulation_path(simulation) %></td>
    <td><%= link_to 'Destroy', simulation, :confirm => 'Are you sure?', :method => :delete %></td>
    <td>its set of alternatives</td>
  </tr>
<% end %>
</table>

